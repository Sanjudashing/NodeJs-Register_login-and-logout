<html lang="en">
  {{> header}}
  <body>
     {{> nav}}
    <center> <h1> Student Login Form </h1> </center>
    <form action="/login" method="POST">
    <div class="container">
        <label>Email : </label>
        <input
          type="text"
          placeholder="Enter Username"
          name="email"
          required
        />
        <label>Password : </label>
        <input
          type="password"
          placeholder="Enter Password"
          name="pwd"
          required
        />
